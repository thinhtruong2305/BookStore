@using BookStore.Website.Areas.Identity.Models.Manage
@model EditExtraProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<partial name="~/Areas/Identity/Views/Shared/PartialView/_StatusMessage.cshtml" />
<form id="form-create-category" autocomplete="off" asp-action="EditProfile" asp-controller="Manage" asp-area="Identity" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">
            <div class="card mb-4">
                <div class="card-body">
                    <div id="book" class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="title mb-5">Thông tin cá nhân</h4>
                            </div>
                            <div class="col-md-12 mt-2">
                                <div class="row">
                                    <div class="col-md-12 col-lg-4 form-field p-2">
                                        <input type="text" asp-for="UserName" class="form-control form-input" placeholder=" ">
                                        <label class="form-label" asp-for="UserName"></label>
                                        <div class="row">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-4 form-field p-2">
                                        <input readonly type="text" asp-for="UserEmail" class="form-control form-input" placeholder=" ">
                                        <label class="form-label" for="Keyword" asp-for="UserEmail"></label>
                                        <div class="row">
                                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-4 form-field p-2">
                                        <input type="text" asp-for="PhoneNumber" class="form-control form-input" placeholder=" ">
                                        <label class="form-label" for="Keyword" asp-for="PhoneNumber"></label>
                                        <div class="row">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-6 form-field p-2">
                                        <input type="text" asp-for="HomeAdress" class="form-control form-input" placeholder=" ">
                                        <label class="form-label" for="Keyword" asp-for="HomeAdress"></label>
                                        <div class="row">
                                            <span asp-validation-for="HomeAdress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-6 form-field p-2">
                                        <input type="date" asp-for="BirthDate" class="form-control form-input" placeholder=" ">
                                        <label class="form-label" for="Keyword" asp-for="BirthDate"></label>
                                        <div class="row">
                                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row mt-2">
                <div class="col-6">
                    @*onclick="CreateBookImage('@Url.Action("Create", "BookImage")')"*@
                    <button id="save" class="btn btn-success mx-auto" type="submit">
                        <i class="fa-solid fa-floppy-disk fs-4"></i> <span class="fs-4">Lưu</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
