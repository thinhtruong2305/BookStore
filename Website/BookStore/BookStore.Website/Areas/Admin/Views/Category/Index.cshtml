@using BookStore.DAL.Entities
@using BookStore.Logic.Shared.Model
@using BookStore.Common.Shared.Model
@model IEnumerable<CategorySummaryModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thư mục danh mục sách</strong>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i> Thêm
                </a>
                <a asp-action="Trash" asp-controller="Category" asp-area="Admin" class="btn btn-sm btn-danger">
                    <i class="fa-solid fa-trash-alt"></i> Thùng rác
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Từ khóa</th>
                    <th class="text-center">Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="body-list">
                @Html.Partial("~/Areas/Admin/Views/Category/List.cshtml", Model)
            </tbody>
            <tfoot>
                <tr>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Từ khóa</th>
                    <th class="text-center">Trạng thái</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>