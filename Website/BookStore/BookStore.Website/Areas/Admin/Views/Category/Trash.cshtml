@using BookStore.DAL.Entities
@using BookStore.Logic.Shared.Model
@using BookStore.Common.Shared.Model
@model IEnumerable<CategorySummaryModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác danh mục sách</strong>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-caret-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Từ khóa</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="body-list-trash">
                @await Html.PartialAsync("~/Areas/Admin/Views/Category/ListTrash.cshtml", Model)
            </tbody>
            <tfoot>
                <tr>
                    <th class="text-center">Tên danh mục</th>
                    <th class="text-center">Từ khóa</th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>